<p id="notice"><%= notice %></p>

<h1>项目列表</h1>

<table  class="table table-hover">
  <thead>
    <tr>
      <th>项目名称</th>
      <th>客户名称</th>
      <th>项目类型</th>
      <th>项目金额</th>
      <th>预计完成日期</th>
      <th>负责人</th>
      <th>项目来源</th>
      <th>项目阶段</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.ptitle %></td>
        <td><%= project.pcustom %></td>
        <td><%= project.ptype %></td>
        <td><%= project.pprice %></td>
        <td><%= project.pdate %></td>
        <td><%= project.psales %></td>
        <td><%= project.psource %></td>
        <td><%= project.pstate %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新建', new_project_path, class: "btn btn-primary" %>
